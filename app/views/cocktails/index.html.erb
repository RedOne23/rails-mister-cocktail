<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1550520293-d34b3f2e116d?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60);">
  <div class="container">
    <h1><i class="fas fa-glass-martini-alt drink"></i>Happy <strong>Cocktails <span>!</span></strong></h1>
    <p>Make your dreams cocktails...</p>
    <%= link_to  "Create a new Cocktail", new_cocktail_path, class: "btn btn-primary" %>
  </div>
</div>

<div class="container">

<h1>Our Cocktails <i class="fas fa-cocktail"></i></h1>


    <% @cocktails.each do |cocktail| %>

 <div class="card-product my-4">
  <% if cocktail.photo.attached? %> 
    <%= cl_image_tag cocktail.photo.key, crop: :fill %>
  <% end %>
  <div class="card-product-infos">
      <h3><%= link_to cocktail.name, cocktail_path(cocktail), class: "cocktail_name" %></h3>
      <ul>
      <%cocktail.doses.each do |dose|%>
      <li><%= "Ingredient : #{dose.description} de #{dose.ingredient.name}" %></li>
       <%= link_to "Remove",
                  dose_path(dose),
                  method: :delete,
                  data: { confirm: "Are you sure?" }, class:"remove-link" %>
      <%end%>
      </ul>
  </div>
  <br>
</div>
      <% end %>
